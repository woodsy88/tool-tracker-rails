<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Tool Tracker Alert", sticky: false, time: 1000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Tool Tracker Error", sticky: false, time: 1000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Tool Tracker Notification", sticky: false, time: 1000) %>
<% end %>