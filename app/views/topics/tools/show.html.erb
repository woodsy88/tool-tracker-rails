<h2><%= @tool.title %></h2>
<p><%= @tool.topic.title %></p>
<p><%= @tool.user.full_name %></p>
<%= @tool.created_at.strftime("Published: on %m/%d/%Y at %l:%M%P") %>

<% if current_user && @tool.user_id == current_user.id %>
  <%= link_to 'Edit Tool', edit_topic_tool_path(topic_id: @topic.id, id: @tool.id) %>
<% end %>